const data = {
    image:'https://cdn.prod.website-files.com/6340630bc206e31341770199/666c109316a99547b357ff88_664db8514792d58509a97787_6340630cc206e3b22a772e90_61670b0ac994c3226bf78115_psicologo-psicoterapeuta-e-psichiatra-che-differenza-ce.jpeg',
    heading:'Analisis shodasdoajsdkajdkjaksdjaksjk',
    subheading:'subtitulo'
}
---
<script>
    const heading = document.querySelector('h3')
    const maxLegnth = 25
    
    heading?.addEventListener('mouseenter',()=>{
        heading?.textContent?.length > maxLegnth && heading.classList.add('slide')
    })
</script>

<a href="">
    <div class="container_heading" >    
        <h3>{data.heading}</h3>
        <h2>{data.subheading}</h2>
    </div>
    <picture>
        <img src={data.image} alt={data.heading} >
    </picture>
</a>

<style>
    a{
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 600px;
        border-radius: 300px;
        background: var(--primary-color);
        padding: 12px 16px;
    }
    .container_heading{
        width: 370px;
        height: 60px;
        overflow: hidden;
    }
    picture{
        width: 200px;
        height: 60px;
    }
    img{
        width: 100%;
        height: 100%;
        border-radius: 150px;
        object-fit: cover;
    }
    h3{
        white-space: nowrap;
        font-size: 2rem;
    }
    .slide:hover{
        animation: slide 10s;
    }

    @keyframes slide {
        0%{
            transform: translateX(0%);
        }
        100%{
            transform: translateX(-100%);
        }
    }
</style>