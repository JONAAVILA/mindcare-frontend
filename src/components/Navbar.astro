---
import ButtonCustom from "./buttons/ButtonCustom.astro";
---

<aside id="navbar" >
    <ButtonCustom path="/contacto">
        CONTACTO
    </ButtonCustom>
    <ButtonCustom path="/about">
        ABOUT
    </ButtonCustom>
    <ButtonCustom path="/doctores">
        DOCTORES
    </ButtonCustom>
    <ButtonCustom path="/blog">
        BLOG
    </ButtonCustom>
</aside>

<style>
    aside{
        position: fixed;
        top: 0px;
        left: 50%;
        width: 100%;
        height: 70px;
        transform: translateX(-50%);
        display: flex;
        align-items: center;
        justify-content: center;
        border-bottom: solid 1px var(--grey-color);
        gap: 30px;
    }
    .scrolled{
        background: var(--primary-color);
        transition: all ease-in-out 200ms;
    }
</style>