<style>
    aside{
        position: fixed;
        top: 0px;
        left: 50%;
        width: 100%;
        height: 70px;
        transform: translateX(-50%);
        display: flex;
        align-items: center;
        justify-content: center;
        border-bottom: solid 1px var(--grey-color);
        gap: 30px;
    }
    a{  
        display: grid;
        align-items: center;
        justify-content: center;
        width: 60px;
        position: relative;
        transition: all ease-in-out 200ms;
    }
    a:hover::after{
        position: absolute;
        content: " ";
        width: 80px;
        height: 30px;
        left: -20%;
        top: -60%;
        border: solid 1px var(--grey-color);
        border-radius: 50%;
        animation: rotate 300ms forwards;
        transform-origin: center;
    }
    .scrolled{
        background: var(--primary-color);
        transition: all ease-in-out 200ms;
    }

    @keyframes rotate {
        0%{
            opacity: 0;
            transform: rotate(0deg);
        }
        10%{
            opacity: 0.5;  
        }
        70%{
            opacity: 0.5;  
            transform: rotate(-35deg);
        }
        100%{
            transform: rotate(-35deg);
            opacity: 1;
        }
    }
</style>