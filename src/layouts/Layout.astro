<style is:global >
	@font-face {
		font-family: 'Raleway-Medium';
		src: url('../assets/fonts/Raleway-Medium.ttf') format('truetype');
	}
	@font-face {
		font-family: 'Raleway-MediumItalic';
		src: url('../assets/fonts/Raleway-MediumItalic.ttf') format('truetype');
	}
	@font-face {
		font-family: 'Raleway-SemiBold';
		src: url('../assets/fonts/Raleway-SemiBold.ttf') format('truetype');
	}
	:root{
		--primary-color:#F7F7F7;
		--secundary-color:#272727;
		--rose_color:#D9D9D9;
		--rose-color-transparent:#D9D9D970;
		--blue-color:#C0DDEF;
		--grey-color:#636363;
		--white-color:#FFFFFF;

		display: grid;
		align-items: center;
		justify-content: center;
		margin: 0;
		width: 100%;
		height: 100vh;
	}
	body {
		font-family: 'Raleway-Medium', sans-serif;
		color: var(--secundary-color);
		background: radial-gradient(ellipse at center,#C0DDEF,#F7F7F7);
		background-repeat: no-repeat;
	}
	h1{
		font-family: 'Raleway-SemiBold', sans-serif;
		font-size: 6rem;
		line-height: 1;
		margin: 0;
	}
	h2{
		font-size: 10px;
		font-weight: 600;
	}
	h3{
		font-family: 'Raleway-MediumItalic', sans-serif;
		font-weight: 500;
		font-size: 4rem;
		margin: 0;
	}
	a{
		font-size: 10px;
		text-decoration: none;
		color: var(--secundary-color);
	}
</style>
