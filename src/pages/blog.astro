---
import Banner from "../components/Banner.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout tittle="Mindcare - Blog" >
    <section>
        <div class="blog_box_banner" >
            <Banner message="PROXIMAMENTE" />
        </div>
        <div class="blog_box_header">
            <header>
                <h1>Manteneté informado</h1>
                <img
                    class="blog_arrow_icon" 
                    src="icons/arrow.svg" 
                    alt="mindcare icon arrow"
                >
            </header>
            <div>
                <h2>ACÁ PODÉS VER LAS NOTICIAS RELACIONADAS A LA SALUD Y A MINDCARE, PARA NO PERDERTE NADA ¡SUSCRIBITE!</h2>
            </div>
        </div>
    </section>
</Layout>

<style>
    section{
        position: relative;
        display:grid;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }
    .blog_box_header{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    header{
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
    }
    h1{
        font-size: 4rem;
    }
    .blog_arrow_icon{
        width: 50px;
        transform: rotate(90deg);
    }
    .blog_box_banner{
        z-index: 10;
        position: fixed;
        left: 50%;
        top: 60%;
        transform: translate(-50%,50%);
    }
</style>